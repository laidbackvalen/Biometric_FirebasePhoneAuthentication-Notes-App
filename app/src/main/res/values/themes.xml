<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Notes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#F3C94E</item>
        <item name="hintTextColor">#F3C94E</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="boxStrokeColor">#F3C94E</item>
        <item name="hintTextColor">#F3C94E</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="BottomApp" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="backgroundTint">#121212</item>
    </style>

    <style name="CustomPopupMenuTextColor" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/black</item> <!-- Set your desired text color -->
    </style>


    <style name="CustomSearchView" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:queryBackground">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

</resources>