<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".views.activity.Accounts_Activity">

    <ImageView
        android:id="@+id/backArrowImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:padding="5dp"
        android:src="@drawable/baseline_arrow_back_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/removeUserInfo"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/backArrowImage"
        app:layout_constraintTop_toBottomOf="@id/backArrowImage" />

    <TextView
        android:id="@+id/removeUserInfoText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="10dp"
        android:gravity="center|start"
        android:text="Remove User Information"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/removeUserInfo"
        app:layout_constraintEnd_toStartOf="@id/removeUserInfoImage"
        app:layout_constraintStart_toStartOf="@+id/removeUserInfo"
        app:layout_constraintTop_toTopOf="@+id/removeUserInfo" />

    <ImageView
        android:id="@+id/removeUserInfoImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="@+id/removeUserInfo"
        app:layout_constraintEnd_toEndOf="@id/removeUserInfo"
        app:layout_constraintStart_toEndOf="@id/removeUserInfoText"
        app:layout_constraintTop_toTopOf="@+id/removeUserInfo" />

    <View
        android:id="@+id/removeData"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/removeUserInfo"
        app:layout_constraintStart_toStartOf="@+id/removeUserInfo"
        app:layout_constraintTop_toBottomOf="@+id/removeUserInfo" />

    <TextView
        android:id="@+id/removeDataInfoText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="10dp"
        android:gravity="center|start"
        android:text="Remove Data"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/removeData"
        app:layout_constraintEnd_toStartOf="@id/removeDataInfoImage"
        app:layout_constraintStart_toStartOf="@+id/removeData"
        app:layout_constraintTop_toTopOf="@+id/removeData" />

    <ImageView
        android:id="@+id/removeDataInfoImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="@+id/removeData"
        app:layout_constraintEnd_toEndOf="@id/removeData"
        app:layout_constraintStart_toEndOf="@id/removeDataInfoText"
        app:layout_constraintTop_toTopOf="@+id/removeData" />

    <View
        android:id="@+id/closeAccount"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/removeData"
        app:layout_constraintStart_toStartOf="@+id/removeData"
        app:layout_constraintTop_toBottomOf="@+id/removeData" />

    <TextView
        android:id="@+id/closeAccountText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/lato_bold"
        android:paddingStart="10dp"
        android:gravity="center|start"
        android:text="Delete Account"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/closeAccount"
        app:layout_constraintEnd_toStartOf="@id/closeAccountImage"
        app:layout_constraintStart_toStartOf="@+id/closeAccount"
        app:layout_constraintTop_toTopOf="@+id/closeAccount" />

    <ImageView
        android:id="@+id/closeAccountImage"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/baseline_keyboard_arrow_right_24"
        app:layout_constraintBottom_toBottomOf="@+id/closeAccount"
        app:layout_constraintEnd_toEndOf="@id/closeAccount"
        app:layout_constraintStart_toEndOf="@id/closeAccountText"
        app:layout_constraintTop_toTopOf="@+id/closeAccount" />


</androidx.constraintlayout.widget.ConstraintLayout>
