<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/border_radius_background_content_main"
    android:padding="10dp">

    <View
        android:id="@+id/viewContentRecycler"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/border_radius_background_content"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleContentRecycle"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Title : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/titleRetrieveContentRecycle"
        app:layout_constraintStart_toStartOf="@id/viewContentRecycler"
        app:layout_constraintTop_toTopOf="@+id/titleRetrieveContentRecycle" />

    <TextView
        android:id="@+id/titleRetrieveContentRecycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/descriptionRetrieveContentRecycle"
        app:layout_constraintEnd_toStartOf="@id/deleteImageContentRecycler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/titleContentRecycle"
        app:layout_constraintTop_toTopOf="@id/viewContentRecycler"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/deleteImageContentRecycler"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:elevation="10dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/border_radius_background_content_round"
        android:src="@drawable/baseline_close_24"
        app:layout_constraintEnd_toEndOf="@+id/viewContentRecycler"
        app:layout_constraintStart_toEndOf="@+id/titleRetrieveContentRecycle"
        app:layout_constraintTop_toTopOf="@+id/titleRetrieveContentRecycle" />

    <TextView
        android:id="@+id/descR"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:elevation="10dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="Desc : "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/descriptionRetrieveContentRecycle"
        app:layout_constraintEnd_toEndOf="@+id/titleContentRecycle"
        app:layout_constraintStart_toStartOf="@+id/titleContentRecycle"
        app:layout_constraintTop_toTopOf="@+id/descriptionRetrieveContentRecycle" />

    <TextView
        android:id="@+id/descriptionRetrieveContentRecycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/viewContentRecycler"
        app:layout_constraintEnd_toEndOf="@+id/titleRetrieveContentRecycle"
        app:layout_constraintStart_toEndOf="@+id/titleContentRecycle"
        app:layout_constraintTop_toBottomOf="@+id/titleRetrieveContentRecycle" />


    <TextView
        android:id="@+id/dateRetrieveContentRecycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/viewContentRecycler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/descR"
        app:layout_constraintTop_toBottomOf="@+id/viewContentRecycler" />

    <TextView
        android:id="@+id/timeRetrieveContentRecycle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:gravity="end"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/viewContentRecycler"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dateRetrieveContentRecycle"
        app:layout_constraintTop_toBottomOf="@+id/dateRetrieveContentRecycle" />

</androidx.constraintlayout.widget.ConstraintLayout>